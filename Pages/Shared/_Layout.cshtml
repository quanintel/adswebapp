        <div class="col-lg-4 col-6 text-right">
            <p class="m-0">Gọi ngay</p>
            <h5 class="m-0">0965428771</h5>
        </div>
    </div>
</div>
<!-- Topbar End -->


<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <span class="h1 text-uppercase text-dark bg-light px-2">Quảng cáo</span>
                    <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">A&E</span>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a asp-page="/Index" class="nav-item nav-link active">Trang chủ</a>
                        <a asp-page="/Index" class="nav-item nav-link">Sản phẩm</a>
                        <a asp-page="/Index" class="nav-item nav-link">Quy trình đặt hàng</a>

                        <a asp-page="/Index" class="nav-item nav-link">Bảo hành</a>
                        <a asp-page="/Index" class="nav-item nav-link">Liên hệ</a>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-lg-4 col-6 text-left p-3">
            <form action="">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm">
                    <div class="input-group-append">
                        <button class="input-group-text bg-transparent text-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Navbar End -->

@RenderBody()

